{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "src/**/*.spec.ts",
    "./eslint.config.ts",
    "./jest.config.ts",
  ],
  "include": [
    "src/**/*.ts"
  ]
}
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "noEmit": false,
    "types": [
      "node",
      "jest"
    ],
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "rewriteRelativeImportExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.ts",
  ]
}
{
  "name": "eslint-flat-monostyle",
  "version": "0.1.0",
  "private": false,
  "description": "Opinionated ESLint flat-config presets and custom formatting rules for TypeScript monorepos.",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:report": "npm run lint",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "test": "jest --config ./jest.config.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-flat-config",
    "typescript",
    "monorepo",
    "style"
  ],
  "dependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.7.0",
    "eslint": "^10.0.2",
    "eslint-plugin-sonarjs": "^4.0.0",
    "typescript-eslint": "^8.52.0",
    "xo": "^1.2.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.0",
    "jest": "^30.0.5",
    "semantic-release": "^25.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
